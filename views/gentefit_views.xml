<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_gentefit_files" model="ir.actions.act_window">
    <field name="name">GenteFit Files</field>
    <field name="res_model">gentefit.file</field>
    <field name="view_mode">tree,form</field>
    <field name="target">current</field>
  </record>

  <menuitem id="menu_gentefit_root" name="GenteFit" sequence="50"/>
  <menuitem id="menu_gentefit_files" name="Files" parent="menu_gentefit_root" action="action_gentefit_files"/>

  <record id="view_gentefit_file_tree" model="ir.ui.view">
    <field name="name">gentefit.file.tree</field>
    <field name="model">gentefit.file</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="filename"/>
        <field name="import_date"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_gentefit_file_form" model="ir.ui.view">
    <field name="name">gentefit.file.form</field>
    <field name="model">gentefit.file</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="filename"/>
            <field name="batch_id"/>
            <field name="import_date"/>
            <field name="state"/>
          </group>
          <group>
            <field name="raw_xml" widget="text" />
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
